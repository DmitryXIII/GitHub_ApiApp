<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/user_search_item_height"
    android:layout_margin="@dimen/padding_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/padding_4">

        <ImageView
            android:id="@+id/user_avatar_image_view"
            android:layout_width="@dimen/user_avatar_width"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_search" />

        <TextView
            android:id="@+id/user_login_text_view"
            style="@style/TextAppearance.Material3.HeadlineMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/margin_8"
            android:autoSizeTextType="uniform"
            android:gravity="start"
            android:maxLines="@integer/user_search_item_text_view_max_lines"
            tools:text="@tools:sample/lorem" />
    </LinearLayout>

</androidx.cardview.widget.CardView>